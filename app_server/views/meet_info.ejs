<%- include('partials/layout') -%>

  <div class="banner page-header">
    <div class="col-lg-6">
      <h1>2022 Meet Information</h1>
      <hr>
       <table id="table-id" class="table table-striped table-bordered table-hover">
          <thead class="thead-dark">
          <tr>
            <th>ID</th>
            <th>Race</th>
            <th>Date</th>
            <th>Address</th>
            <th>Departure Time</th>
            <th>Link</th>
          </tr>
          </thead>
          <!-- foreach loop -->
          <% results.forEach(function(result) { %>
          
            <tr>
              <td><%= result.id %></td>
              <td><%= result.course %></td>
              <td><%= result.race_date.toDateString() %></td>
              <td><%= result.address %></td>
              <td><%= result.bus_depart %></td>
              <td><a class="nav-link" href="/meet_info_details/:"+<%= result.id %>>Meet Info</a></td>
            </tr>
          
          <% }) %> <!-- End FOR Loop -->
        </table>
      


    </div>
  </div>
</body>

<%- include('partials/footer') -%>